        <!--android:layout_width="240dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_below="@id/tv_experience_new_player"-->
        <!--android:src="@drawable/ic_circle_gold_select"/>-->

    </RelativeLayout>
</LinearLayout>