<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/back_left"
            android:src="@drawable/ic_back_black_left"
            android:layout_centerVertical="true"
            android:padding="@dimen/space.small"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tint_color"
            android:text="@string/tv_change_bind_phone"
            android:layout_centerInParent="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/space.medium"
        android:layout_marginStart="@dimen/space.medium"
        android:layout_marginEnd="@dimen/space.medium"
        android:layout_marginRight="@dimen/space.medium"
        android:layout_marginTop="@dimen/space.medium"
        android:orientation="horizontal"
        android:background="@drawable/bg_round_shallow_gray_input">
        <EditText
            android:id="@id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space.very_small"
            android:layout_marginStart="@dimen/space.very_small"
            android:inputType="phone"
            android:textColorHint="@color/gray"
            android:hint="@string/et_login_password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/tint_color"
            android:maxLength="11"/>
    </LinearLayout>
    <LinearLayout
        android:id="@id/line_input_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/space.medium"
        android:layout_marginStart="@dimen/space.medium"
        android:layout_marginRight="@dimen/space.medium"
        android:layout_marginEnd="@dimen/space.medium"
        android:layout_marginTop="@dimen/space.small"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@id/et_input_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:hint="@string/et_input_code_hint"
            android:textColorHint="@color/gray"
            android:textColor="@color/tint_color"
            android:padding="@dimen/space.very_small"
            android:inputType="number"
            android:maxLength="6"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:background="@drawable/bg_round_shallow_gray_input"/>
        <Button
            android:id="@id/btn_send_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space.small"
            android:layout_marginStart="@dimen/space.small"
            android:padding="@dimen/space.very_small"
            android:background="@drawable/bg_round_color_gray_deep"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/tint_color"
            android:text="@string/btn_send_code" />
    </LinearLayout>
    <Button
        android:id="@id/btn_checked"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_normal"
        android:background="@drawable/bg_round_color_primary"
        android:text="@string/btn_verification"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/tint_color"
        android:layout_marginStart="@dimen/space.medium"
        android:layout_marginRight="@dimen/space.medium"
        android:layout_marginEnd="@dimen/space.medium"
        android:layout_marginTop="@dimen/space.medium_normal"
        android:layout_marginLeft="@dimen/space.medium"
        android:layout_marginBottom="@dimen/space.medium"/>
</LinearLayout>