<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@id/back_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_black_left"
            android:layout_centerVertical="true"
            android:padding="@dimen/space.small"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_set_payment_password"
            android:layout_centerInParent="true"
            android:textColor="@color/tint_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space.medium_normal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textColor="@color/tint_color"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="@dimen/space.medium"
            android:layout_marginStart="@dimen/space.medium"
            android:text="@string/tv_payment_password"/>
        <EditText
            android:id="@id/et_payment_password"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textColorHint="@color/gray_deep"
            android:padding="@dimen/space.medium"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColor="@color/tint_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:hint="@string/et_input_payment_password_hint"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space.medium"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textColor="@color/tint_color"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="@dimen/space.medium"
            android:layout_marginStart="@dimen/space.medium"
            android:text="@string/tv_affirm_payment_password"/>
        <EditText
            android:id="@id/et_affirm_payment_password"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textColorHint="@color/gray_deep"
            android:padding="@dimen/space.medium"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColor="@color/tint_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:hint="@string/et_affirm_input_password_payment_hint"/>
    </LinearLayout>

    <Button
        android:id="@id/btn_affirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_normal"
        android:background="@drawable/bg_round_color_primary"
        android:text="@string/bt_affirm"
        android:textColor="@color/tint_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_margin="@dimen/space.medium"/>

</LinearLayout>