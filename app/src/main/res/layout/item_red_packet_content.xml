<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tint_gray"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginEnd="@dimen/space.small_middle"
        android:layout_marginLeft="@dimen/space.small_middle"
        android:layout_marginRight="@dimen/space.small_middle"
        android:layout_marginStart="@dimen/space.small_middle"
        android:layout_marginTop="@dimen/space.medium"
        android:background="@drawable/ic_coupon_rate_background"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@id/item_coupon_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/item_coupon_symbol_content"
                    android:text="@string/tv_coupon_symbol"
                    android:layout_marginLeft="@dimen/space.medium"
                    android:layout_marginStart="@dimen/space.medium"
                    android:textColor="@color/deep_pink"
                    android:textSize="12pt" />

                <TextView
                    android:id="@id/item_coupon_symbol_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/item_coupon_symbol"
                    android:layout_toRightOf="@id/item_coupon_symbol"
                    android:text="@string/tv_coupon_money_rate"
                    android:lines="1"
                    android:layout_centerInParent="true"
                    android:textColor="@color/deep_pink"
                    android:textSize="20pt" />

                <TextView
                    android:id="@id/item_coupon_tip_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space.medium"
                    android:layout_marginRight="@dimen/space.medium"
                    android:layout_alignLeft="@id/item_coupon_symbol"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@id/item_coupon_symbol"
                    android:text="@string/tv_coupon_item_user_way"
                    android:textColor="@color/gray_deep"
                    android:lines="2"
                    android:textSize="12sp" />
            </RelativeLayout>

